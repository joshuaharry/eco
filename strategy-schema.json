{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DockerConfig": {
      "type": "object",
      "properties": {
        "dockerFile": {
          "type": "string"
        },
        "imageName": {
          "type": "string"
        },
        "home": {
          "type": "string"
        },
        "incremental": {
          "type": "boolean"
        }
      },
      "required": [
        "dockerFile",
        "imageName",
        "home",
        "incremental"
      ],
      "additionalProperties": false
    },
    "StrategyConfig": {
      "type": "object",
      "properties": {
        "ecoVersion": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "timeout": {
          "type": "number"
        },
        "dependencies": {
          "$ref": "#/definitions/Dependencies"
        },
        "docker": {
          "$ref": "#/definitions/DockerConfig"
        }
      },
      "required": [
        "ecoVersion",
        "name",
        "author",
        "license",
        "timeout",
        "dependencies"
      ],
      "additionalProperties": false
    },
    "Dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "program": {
                "type": "string"
              },
              "checkOutput": {
                "type": "object",
                "properties": {
                  "argument": {
                    "type": "string"
                  },
                  "includes": {
                    "type": "string"
                  }
                },
                "required": [
                  "argument",
                  "includes"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "program"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "required"
      ],
      "additionalProperties": false
    },
    "EcoFind": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "uses": {
          "type": "string",
          "const": "@eco/find"
        },
        "ecosystem": {
          "type": "string"
        },
        "timeout": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "uses",
        "ecosystem"
      ],
      "additionalProperties": false
    },
    "StrategyStep": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "run": {
              "type": "string"
            },
            "timeout": {
              "type": "number"
            }
          },
          "required": [
            "name",
            "run"
          ],
          "additionalProperties": false
        },
        {
          "$ref": "#/definitions/EcoFind"
        }
      ]
    },
    "StrategyAction": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StrategyStep"
          }
        },
        "cleanup": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StrategyStep"
          }
        }
      },
      "required": [
        "steps",
        "cleanup"
      ],
      "additionalProperties": false
    },
    "Strategy": {
      "type": "object",
      "properties": {
        "config": {
          "$ref": "#/definitions/StrategyConfig"
        },
        "action": {
          "$ref": "#/definitions/StrategyAction"
        }
      },
      "required": [
        "config",
        "action"
      ],
      "additionalProperties": false
    },
    "ExecuteRequest": {
      "type": "object",
      "properties": {
        "defaultTimeout": {
          "type": "number"
        },
        "lib": {
          "type": "string"
        },
        "cwd": {
          "type": "string"
        },
        "logFile": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StrategyStep"
          }
        },
        "cleanup": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StrategyStep"
          }
        },
        "verbose": {
          "type": "boolean"
        }
      },
      "required": [
        "defaultTimeout",
        "lib",
        "cwd",
        "logFile",
        "steps",
        "cleanup"
      ],
      "additionalProperties": false
    },
    "OperationTimeout": {
      "type": "string",
      "const": "OPERATION_TIMEOUT"
    },
    "StepResult": {
      "anyOf": [
        {
          "type": "string",
          "const": "STEP_SUCCESS"
        },
        {
          "type": "string",
          "const": "STEP_FAILURE"
        },
        {
          "$ref": "#/definitions/OperationTimeout"
        }
      ]
    }
  }
}