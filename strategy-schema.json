{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Strategy",
  "definitions": {
    "Strategy": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "author": {
              "type": "string"
            },
            "license": {
              "type": "string"
            },
            "timeout": {
              "type": "number"
            },
            "dependencies": {
              "$ref": "#/definitions/Dependencies"
            }
          },
          "required": ["name", "author", "license", "timeout", "dependencies"],
          "additionalProperties": false
        },
        "action": {
          "type": "object",
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "run": {
                        "type": "string"
                      },
                      "timeout": {
                        "type": "number"
                      }
                    },
                    "required": ["name", "run"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "uses": {
                        "type": "string",
                        "const": "@eco/find"
                      },
                      "ecosystem": {
                        "type": "string"
                      },
                      "timeout": {
                        "type": "number"
                      }
                    },
                    "required": ["name", "uses", "ecosystem"],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "cleanup": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "run": {
                        "type": "string"
                      },
                      "timeout": {
                        "type": "number"
                      }
                    },
                    "required": ["name", "run"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "uses": {
                        "type": "string",
                        "const": "@eco/find"
                      },
                      "ecosystem": {
                        "type": "string"
                      },
                      "timeout": {
                        "type": "number"
                      }
                    },
                    "required": ["name", "uses", "ecosystem"],
                    "additionalProperties": false
                  }
                ]
              }
            }
          },
          "required": ["steps", "cleanup"],
          "additionalProperties": false
        }
      },
      "required": ["config", "action"],
      "additionalProperties": false
    },
    "Dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "program": {
                "type": "string"
              },
              "checkOutput": {
                "type": "object",
                "properties": {
                  "argument": {
                    "type": "string"
                  },
                  "includes": {
                    "type": "string"
                  }
                },
                "required": ["argument", "includes"],
                "additionalProperties": false
              }
            },
            "required": ["program"],
            "additionalProperties": false
          }
        }
      },
      "required": ["required"],
      "additionalProperties": false
    }
  }
}
