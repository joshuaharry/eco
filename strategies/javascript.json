{
  "config": {
    "name": "JavaScript",
    "author": "Joshua Hoeflich",
    "license": "MIT",
    "timeout": 180000,
    "ecoVersion": "0.0.0",
    "dependencies": {
      "required": [
        {
          "program": "node",
          "checkOutput": {
            "argument": "--version",
            "includes": "16"
          }
        },
        { "program": "git" }
      ]
    }
  },
  "action": {
    "steps": [
      {
        "uses": "Find",
        "name": "Download the Source Code",
        "ecosystem": "npm"
      },
      {
        "uses": "Run",
        "name": "Install the Dependencies",
        "run": "npm install --legacy-peerdeps"
      },
      {
        "uses": "Run",
        "name": "Run the Unit Tests",
        "run": "npm test"
      }
    ],
    "cleanup": [
      {
        "uses": "Run",
        "name": "Delete the package's source code",
        "run": "exit 0"
      }
    ]
  }
}
